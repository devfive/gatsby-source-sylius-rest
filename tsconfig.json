{
  "compilerOptions": {
    "target": "es6",
    "lib": ["DOM", "ES6", "ESNext.AsyncIterable"],
    "sourceMap": true,
    "jsx": "react",
    "noImplicitAny": true,
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
      // "./typings"
    ],
    "types": [
      "node"
    ],
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*"
        // "typings/*"
      ]
    },
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "./node_modules/*"
  ]
}
